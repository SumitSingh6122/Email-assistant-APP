{
    "name": "Email Assistant App",
    "description": "AI-Powered email Replies",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_title": "Email Writer Assistant",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "*://mail.google.com/*"
            ],
            "css":["content.css"],
            "run_at":"document_end"
        }
    ],
     "web_accessible_resources": [
    {
      "resources": [ "icons/*"],
      "matches": [ "*://mail.google.com/*"]
    }
  ],
    "host_permissions": [
        "http://localhost:9090/*",
        "*://mail.google.com/*"
    ]
}